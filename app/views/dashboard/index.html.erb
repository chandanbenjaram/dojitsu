<%= javascript_include_tag('ui.progressbar')%>
<%= stylesheet_link_tag('jquery-ui', 'ui.progressbar','ui.theme', 'main')%>
<%= render 'layouts/loggedinbody'%>
<div class="challange">
	my dashboard
</div>

<table>
	<td>
	<content>		
	<table>
		<td>
			<tr>
				<td>
					<div class="dashboardsidebar">
					<div class="mychallenge">
						<div id="titlechallenge">
							<div style="left: 16px; position: relative; top: 5px;">
								MY CHALLENGES <font color="#ffffff"><b>( <%= current_user.challenges.size %> ) </b></font>
							</div>
							<div class="second_titlechallenge">
								<%= button_to "", new_challenge_url, :class => "new_challenge_button", :method => :get%>
							</div>
						</div>
						<div id="myChallenge"></div>
					</div>
					</div>	
				</td>
			</tr>
			<tr>
				<td>	
					<div class="dashboardsidebar1">
						<div class="mychallenge">
							<div id="titlechallenge">
								<div id="title" style="left: 16px; position: relative; top: 5px;">
									NEW MESSAGES <font style="color:#fff">( <%= current_user.inbox.count %> )</font>
								</div>
								<div class="second_titlechallenge">
									<%= button_to "", new_challenge_url, :class => "new_challenge_button", :method => :get%>
								</div>
							</div>
							<div id="message"></div>
						</div>	
					</div>
				</td>
			</tr>
		</td>
	</table>
	</content>
    </td>
	<td valign=top>
		<div class="dashboardsidebar2">
		    <div class="whatsnew">	
				<font style="float: left;left: 15px; position: relative; top:6px;">WHAT'S NEW</font> 
				<%= button_to "", challenges_url, :class => "ds_view_all", :method => :get%>
			</div> 
			<div id="whatsNew"></div>
		</div>
	</td>
</table>

<script>
	$(document).ready(function(){	
		$.ajax({
			url: "/dashboard/whatsNew",
			cache: false,
			success: function(html){
			  $("#whatsNew").append(html);
			}
		});
		
		$.ajax({
			url: "/dashboard/message",
			cache: false,
			success: function(html){
			  $("#message").append(html);
			}
		});
		
		$.ajax({
			url: "/dashboard/myChallenge",
			cache: false,
			success: function(html){
			  $("#myChallenge").append(html);
			}
		});
		
	});
</script>
