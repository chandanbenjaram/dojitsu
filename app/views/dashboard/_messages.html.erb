 <% current_user.inbox.each do |userMessage| %>
        <tr>
            <td width="10%" class="bordercolort">
                <%= image_tag(FbGraph::User.new(userMessage.from).fetch.picture) %>
            </td>
            <td width="90%" class="bordercolort2">
                <font size="3px" style="float:right"><%= time_ago_in_words userMessage.created_at %></font>
                <font size="3px" ><%= FbGraph::User.new(userMessage.from).fetch.name %></font></br>
                <font size="3px"><%=h truncate(userMessage.body, :length => 55) %>..</font></br>
                </td>
            </td>
        </tr>
        <% end %>