<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name,:validate => true, :url => registration_path(resource_name)) do |f| %>
<!--
<%= devise_error_messages! %>
-->
<p><%= f.label :email %><br />
	<%= f.text_field :email, :class => "textfield_effect", :id => "on_focus_textfield" %></p>
	
	<%= f.label :fname,"First Name" %><br />
	<%= f.text_field :fname, :class => "textfield_effect", :id => "on_focus_textfield" %></p>
	
	<%= f.label :lname, "Last Name" %><br />
	<%= f.text_field :lname, :class => "textfield_effect", :id => "on_focus_textfield" %></p>

	<% if @user.password_required? %> 
	<p><%= f.label :password %><br />
		<%= f.password_field :password , :class => "textfield_effect", :id => "on_focus_textfield"%></p>

		<p><%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation , :class => "textfield_effect", :id => "on_focus_textfield"%></p>
			<% end %>
			<p><%= f.submit "Register" %></p>
			<% end %>

			<%= render :partial => "devise/shared/links" %>
