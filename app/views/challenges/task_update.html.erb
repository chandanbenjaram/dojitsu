	<table bgcolor="#f4f4f4" >
		<tr bgcolor="#ffffff">
			<td colspan="2">
				<font size="4px;"><%= @name%></font>
			<td>
		</tr>	
		<tr  bgcolor="#f5faf0">
			<td>
				<font size="4px;"><%= @score%> <%= image_tag("icon_multiply.png")%><%= check_box_tag 'task_done', 'yes', true%> 1 mark as complete</font>
			</td>
