
<%= stylesheet_link_tag('simple-tabs','datePicker','colorbox','jquery.cluetip.css')%>
<%= javascript_include_tag('jquery.datePicker','date')%>

<div style="background:#f4f4f4; width:500px; height:140px; overflow:hidden">
<% @score_by%>
  <% if @score_by == "Check box:1 for checking off the task" %>
	<table bgcolor="#f4f4f4" >
		<tr bgcolor="#ffffff">
			<td colspan="2">
				<font size="4px;"><%= @name%></font>
			<td>
		</tr>	
		<tr  bgcolor="#f5faf0">
			<td>
				<font size="4px;"><%= @score%> <%= image_tag("icon_multiply.png")%><%= check_box_tag 'task_done', 'yes', true%> 1 mark as complete</font>
			</td>
			<td colspan="2">
				<%= image_tag("icon_equal.png")%><font size="4px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @score%></font>
			</td>
		</tr>
		<tr bgcolor="#ffffff">
			<td colspan="2">
				<%= link_to "CANCEL",  show_per_challenges_path(:id => @id), :style => "text-decoration: none; color:#fff; float:right" ,:class => "links_cancel"%>
				<%= link_to "UPDATE",  task_update_c_challenges_path(:id => @id,:name =>@name), :style => "text-decoration: none; color:#fff; float:right; margin-right:5px;" ,:class => "task_links_cancel"%>
			<td>
		</tr>							
    <table>
  <% else %>
	<table bgcolor="#f4f4f4" >
		<tr bgcolor="#ffffff">
			<td colspan="2">
				<font size="4px;"><%= @name%></font>
			<td>
		</tr>	
		<tr  bgcolor="#f5faf0">
			<td>
				<font size="4px;"><%= @score%> <%= image_tag("icon_multiply.png")%><%= text_field_tag 'no_of_task', nil %> 1 mark as complete</font>
			</td>
			<td colspan="2">
				<%= image_tag("icon_equal.png")%><font size="4px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @score%></font>
			</td>
		</tr>
		<td width="60%">	
					<div id="ch_st_dat" style="display:none;">
						<%= text_field_tag :st_value1, nil, :class => "textfield_effect  date-pick", :id => "st_dv" %></br>
					</div>
					<div id="ch_st_num" style="display:none;">
						<%= text_field_tag :st_value, nil , :class => "textfield_effect", :id => "st_nv"  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<%= text_field_tag :st_label, nil , :class => "textfield_effect", :id => "st_nl"%>
					</div>
			   </td>
		<tr bgcolor="#ffffff">
			<td colspan="2">
				<%= link_to "CANCEL",  show_per_challenges_path(:id => @id), :style => "text-decoration: none; color:#fff; float:right" ,:class => "links_cancel"%>
				<%= link_to "UPDATE",  task_update_c_challenges_path(:id => @id,:name =>@name), :style => "text-decoration: none; color:#fff; float:right; margin-right:5px;" ,:class => "task_links_cancel"%>
			<td>
		</tr>							
    <table>
  <% end %>
</div>	