			</tr>
			<% if aTask.is_complete ==0 %>
				<tr  id="hr_line"> 
			<%else%>
				<tr id="hr_line1"> 
			<% end %>
				<td colspan="5"> 

					<hr/>
				</td>
			</tr> 
         <%t+=1 %>		
