										      var my_score= parseInt(mytotal);
											  
											 document.getElementById("sum<%=t%>").value=mytotal
											 document.getElementById("ch<%=t%>").value="<%= @challenge.id %>";
											 document.getElementById("task<%=t%>").value="<%= aTask.id %>"
									  }
