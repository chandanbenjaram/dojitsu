<%= form_tag add_task_fun_challenges_path, :method => :get do %>
<%= stylesheet_link_tag('challenges.css') %>
<table width="700" border="1" >
	<tr bgcolor="#ffffff">
		<td colspan="5" align="center"><br>
			<h3 style="color:#f9a943">Add new Task</h3>
		<td>
	</tr>
	<tr>
		<td width="66" >
			<%= hidden_field_tag :challenge_id, @ch_id %>
			<div class="styled-select">
			<%= select_tag "score_by", options_for_select([
				["Choose", "0"],
				["Check box:1 for checking off the task", "Check box:1 for checking off the task"],	 
				["Self-report number","Self-report number"]														
				]), :style => "width:252px;"
			%>
			</div>	
		</td>
		<td width="10"><%= image_tag("icon_multiply.png")%></td>
		<td width="200">
			<input type="text" name="score" class="textfield_effect" placeholder="Score........">
		</td>
		<td width="10"  valign="middle"><%= image_tag("icon_slash.png")%></td>
		<td width="200">
			<input type="text" name="name" class="textfield_effect" placeholder="taks name..........">
		</td>
	</tr>
	<tr bgcolor="#ffffff">
		<td colspan="5">
			<div><%= submit_tag "ADD TASK" ,:class => "task_links_cancel" %></div>
		<td>
	</tr>
</table>
<% end %>
