<%= render 'layouts/loggedinbody'%>
<br><h3>All Challenges</h3>
<% if @challenges.blank? %>
<p>no challenges at all.</p>
<% else %>  
<ul>
	<% @challenges.each do |c| %>
	<li><%= link_to c.title, {:action => 'show', :id => c.id } %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Edit", edit_challenge_path(c) %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Delete", challenge_path(c), :method => 'delete' %></li>
	<% end %>
</ul>	
<% end %>                                                       
<br/>
<p><%= link_to "Create New Challenge", new_challenge_path %></p>