					</div>
					<div id="ch_ed_num" style="display:none;">
						<%= text_field_tag :ed_value, nil , :class => "textfield_effect", :id => "ed_nv"   %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;						
						<%= text_field_tag :ed_label, nil , :class => "textfield_effect", :id => "ed_nl"  %>						
					</div>
