			$('#ch_st_dat').hide();
		}

	});
	
	$('#ch_ed_date').change(function() {
		var sel_val = $(this).val();
		//alert("hiiiiiii")
		//alert("new"+sel_val);
		//$('#ch_st_date').hide();
		if ($(this).val() == "#ch_ed_dat")
		{
			//alert("date");
			$(sel_val).show();
			$('#ch_ed_num').hide();	
		}
		else
		{
			//alert("number");
			$(sel_val).show();
			$('#ch_ed_dat').hide();
		}

	});
	
	//pop up for task creation hint
	//alert("hiiiii")
	$('.reset_password_popup').colorbox();

});

