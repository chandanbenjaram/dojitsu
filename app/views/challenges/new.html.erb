		//$("<div></div>").appendTo("div#new_tsk_field");
	});
	
	$("#download_now").tooltip({ 
		offset: [10, 2],
		effect: 'slide',
		position: "top right"
	});
	
	
	$('#ch_st_date').change(function() {
