<% aScore= 0 %>
								<% bScore= 0 %>
								<% current_user.challenges.each  do |ch| %>
								<% ch.tasks.each do |aTask| %>
										<% if (aTask.is_complete == 1 ) %>
                                                  <% aScore+=Integer(aTask.score) %>
                                                
                                          <% else %>
                                                  <% bScore += aTask.score.to_i %>
                                                 
                                          <% end %>
									
								<% end %>
								<% end %>
								<%= aScore %> completed total,, <%= bScore %> Not completed total,
										<% cal= (aScore*100)/(aScore+bScore) %>  <%= cal %>Percentage 
										<% trophies=(cal)/(25) %>
										<% i=1 %>
										<% while i <= trophies %>
										  <% i+= 1 %>
										<%= image_tag ("icon_trophy.png") %>
										<% end %>
