<% noOfFirstRank = 0 %>
<% noOfSecondRank = 0 %>
<% noOfThirdRank = 0 %>
<% noOfFourthRank = 0 %>
<% noOffifthRank = 0 %>
<% noOfSixRank = 0 %>

<% current_user.challenges.each do |eachChallenge| %>
<% if eachChallenge.social_type.trophy != nil %>
	<% if eachChallenge.social_type.trophy.rank == 1 %>                          
     <% noOfFirstRank += 1 %>                                                    
   <% elsif eachChallenge.social_type.trophy.rank == 2 %>                          
      <% noOfSecondRank += 1 %>                                                                      
   <% elsif eachChallenge.social_type.trophy.rank == 3 %>                                        
       <% noOfThirdRank += 1 %>                                                         
   <% elsif eachChallenge.social_type.trophy.rank == 4 %>                          
       <% noOfFourthRank += 1 %>                                                                      
   <% elsif eachChallenge.social_type.trophy.rank == 5 %>                          
       <% noOffifthRank += 1 %>                                                                      
   <% elsif eachChallenge.social_type.trophy.rank == 6 %>                          
       <% noOfSixRank += 1 %>                                                   
   <% end %>
<% end %>   
<% end %>                       
<% if noOfFirstRank > 0 %>                          
<%= image_tag("trophy_gold.png") %><font id="trophyAlign"><%= noOfFirstRank %></font>
<% end %>                                                                    
<% if noOfSecondRank > 0 %>                          
<%= image_tag("trophy_green.png") %><font id="trophyAlign"><%= noOfSecondRank %></font>
<% end %>                                                                         
<% if noOfThirdRank > 0 %>                                        
 <%= image_tag("trophy_orange.png") %><font id="trophyAlign"><%= noOfThirdRank %></font>
<% end %>                                                             
<% if noOfFourthRank > 0 %>                          
 <%= image_tag("trophy_blue.png") %><font id="trophyAlign"><%= noOfFourthRank %></font>
<% end %>                                                                          
<% if noOffifthRank > 0 %>                          
 <%= image_tag("trophy_purple.png") %><font id="trophyAlign"><%= noOffifthRank %></font>
<% end %>                                                                          
<% if noOfSixRank > 0 %>                          
 <%= image_tag("trophy_platinum.png") %><font id="trophyAlign"><%= noOfSixRank %></font>
<% end %> 

