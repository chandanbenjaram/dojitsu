<%= stylesheet_link_tag('registration','jquery.cluetip.css') %>
<%= javascript_include_tag('jquery.cluetip.js') %>
<div>
    <div class="registration">
        <div class="regdetails">
            <font color="#F8981D" size=4>REGISTER TO DOJITSU!</font>
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                    <table>
                        <tr>
                            <td width="25%" >
                                 <%= f.label :email %>
                            </td>
                            <td width="75%">
                                 <%= f.text_field :email, :id => "textFieldEffect" %>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                 <%= f.label :first_name,"First Name" %><br />                                        
                            </td>
                            <td>
                                 <%= f.text_field :first_name, :id => "textFieldEffect" %>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <%= f.label :last_name, "Last Name" %><br />                                        
                            </td>
                            <td>
                                 <%= f.text_field :last_name, :id => "textFieldEffect" %>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <%= f.label :password %> 
                                 <span class="moreInfoTip color999" rel="#moreCreateTaskId" title="About your password....!.">
                                      <%= image_tag("btn_questionmark_up.png", :style=>"position: relative; top: 4px;")%>
								 </span>                                 
                            </td>
                            <td>
                                 <%= f.password_field :password, :id => "textFieldEffect" %>
                                 <i class="reglable">6 character minimum</i>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <%= f.label :password_confirmation %><br />                                        
                            </td>
                            <td>
                                 <%= f.password_field :password_confirmation, :id => "textFieldEffect" %>
                            </td>
                        </tr>
                    </table>
                    <div class="buttons">
                        <input class="register" type="submit" value="REGISTER">
                        <input class="cancel" type="button" value="CANCEL">
                    </div>                     
         <% end %>                              
      </div>
      <%= render :partial => "devise/shared/links" %>
    </div>

    <div>
    <div class="regmessage">

	<div class="msgtitle">
            <table>
              <tr>
                  <td><font color="#AAA9A9" size=4><b>WHAT'S NEW</b></font></td>
                  <td>
                      <% if Challenge.whatsNew.count == 0 %>
                      <% else %>				
                           <%= link_to "", nonLoginIndex_challenges_path, :class => "non_login_view_all", :method => :get%> </td>
                      <% end %>
                  </td>    
                  </tr>
            </table>
        </div>
	<table>
            <td>
            
            <% if Challenge.whatsNew.count == 0 %>
                <p align="center">No challenges found</p>
            <% else %>
                <% Challenge.whatsNew.each do |anc| %>
                    <div class="messagereg">
                        <%= image_tag("new.gif", :height => '30', :width => '30' ,:style =>"margin-top:0px; margin-left:-2px;") %>
                          <table width="100%" style="margin-top:-10px;">
                            <tr>
                                  <td width="40%">
                                          <font size="3px;" style="font-weight:bold"><%=h truncate(anc.title, :length => 30) %></font></br>
                                          by  <b><%= FbGraph::User.new(anc.user_id).fetch.name %></b></br>
                                          <% if anc.start_point.instance_of?PointDateType %>
                                                  <%= anc.start_point.value.strftime("%b %d, %Y")%> - <%= anc.end_point.value.strftime("%b %d, %Y")%>
                                          <% else %>
                                                  <%= anc.start_point.value rescue 0%> - <%= anc.end_point.value rescue 0%>
                                          <% end %>
                                          <br>
                                          <% if anc.child_challenges.size<2 %>
                                           <%= anc.child_challenges.size%>&nbsp;&nbsp;contestant
                                           <%else%>
                                          <%= anc.child_challenges.size%>&nbsp;&nbsp;contestants
                                          <%end%>
                                  </td>
                                  <td width="60%">
                                          <p style="float:right; margin-right:20px; color: #A9A8A8;"><%= time_ago_in_words  anc.created_at%></p></br></br>
                                          <% if anc.personal_type.instance_of?ChallengePersonalType%>
                                                  <p style="text-transform:none;">
                                                          <%=h truncate(anc.description, :length => 128) %>....<%= link_to "VIEW" , nonLoginShowPersonal_challenges_path(:id => anc.id) %>									
                                                  </p>
                                          <% end %>
                                          <% if anc.social_type.instance_of?ChallengeSocialType%>
                                                  <p style="text-transform:none;">
                                                          <%=h truncate(anc.description, :length => 190) %>....<%= link_to "VIEW" , nonLoginShowSocial_challenges_path(:id =>anc.id) %>									
                                                  </p>
                                          <% end %>
                                  </td>
                            </tr>
                          </table>
                          </div>
                    </div>
                </br>
                <% end %>
            <% end %>   
            </td>
            <td>
		<div class="regdojitsu">			
                    <div class="fb-like-box" data-href="http://www.facebook.com/pages/Dojitsu/295711967114330" data-width="350" data-height="180" data-show-faces="true" data-stream="false" data-header="false"></div>			
                    <div class="dourbest">
                    <%= image_tag("dourbest.PNG" ,:size => "350x195", :alt => "Do YOur Best")%>
                    <div class="reg">
                    <%= link_to(image_tag("regwelcome.PNG" ,:size => "90x25", :alt => "Do YOur Best"),new_user_registration_path) %>			
                    </div>
                    <div class="seetutorial">
                    <%= image_tag("seetutorial.PNG" ,:size => "75x21", :alt => "See Tutorial")%>
                    </div>
                    </div>
                </div>
          </td>
	</table>
    </div>
  </div>
    
</div>

<div id="moreCreateTaskId">
    <table height="50">						
        <tr>
             <td width="30%"><p style="color:#f9a943; font-size:12px; margin-top:15px;"><b>We don't let just anyone into this dojo.  Keep this dojo secure by selecting a password with at least six characters.  Hai?".  User can use any combination of uppercase/ lowercase letters, numbers, and special characters.</b></p></td>
        </tr>		
    </table>			
</div>

<script>
  $('.moreInfoTip').cluetip({
		width:430,
		height:190,
		local:true, 
		dropShadow: false,
		arrows: true,
		cluetipClass: 'jtip'		
  });
</script>

